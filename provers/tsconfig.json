{
    "extends": "../tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "./scripts/*.ts",
        "./utils/*.ts",
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    }
}
